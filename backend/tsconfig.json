{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "/dist", // Output directory for compiled JavaScript
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "src/controllers"
  ]
}